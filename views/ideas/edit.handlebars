<div class="container">
  {{#each errors}}
  <div class="alert alert-danger alert-dismissable">
    <button class="close" type="button" data-dismiss="alert">
      <span>&times;</span>
    </button>
    {{text}}
  </div>
  {{else}} {{/each}}

  <div class="card card-body mt-4">
    <h3 class="display-4">Feel free to edit your idea, ANYTIME !!!</h3>
    <form action="/ideas/{{idea.id}}?_method=PUT" method="post">
      <input type="hidden" name="_method" value="PUT">
      <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" name="title" placeholder="Enter a title" value="{{idea.title}}" required/>
      </div>
      <div class="form-group">
        <label for="details">Details</label>
        <textarea class="form-control" name="details" placeholder="Description" required>{{idea.details}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-dark btn-block">
          Edit
        </button>
      </div>
    </form>
  </div>
</div>